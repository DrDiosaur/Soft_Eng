@using Musicorum.Web.Models.Events

@model EventsPageModel

@foreach (EventModel ev in Model.Events)
{
    <a href="@Url.Action("GetEvent", "Events", new { eventId = ev.Id })" class="well news-container event-container">
        <div class="row news-image-container">
            <div class="news-image">
                <img src="@ev.ImageUrl">
            </div>
        </div>
        <div class="row news-title event-titl">
            <div class="col-sm-12">
                <p>@ev.Title</p>
            </div>
        </div>
        <div class="event-page-location ev-size">
            Місце проведення: 
            <span>
                <i class="fa fa-compass"></i>
                @ev.Location
            </span>
        </div>
        <div class="event-page-date ev-size">
            Час проведення: 
            <span>
                <i class="fa fa-calendar"></i>
                @ev.DateStarts.ToString("dd.MM.yyyy") - @ev.DateEnds.ToString("dd.MM.yyyy")
            </span>
        </div>
        <div class="row news-content">
            <div class="col-sm-12 event-descr">
                <p>@Html.Raw(ev.Description)</p>
            </div>
        </div>
    </a>
}

@if (Model.HasMore)
{
    <a class="load-more-news" href="javascript:" data-url="@Url.Action("GetMoreEvents", "Events", new { skip = Model.Skip})">Завантажити ще</a>
}

